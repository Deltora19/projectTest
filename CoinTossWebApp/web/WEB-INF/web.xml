<?xml version="1.0" encoding="UTF-8"?>
<web-app version="6.0" xmlns="https://jakarta.ee/xml/ns/jakartaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="https://jakarta.ee/xml/ns/jakartaee https://jakarta.ee/xml/ns/jakartaee/web-app_6_0.xsd">
    <servlet>
        <servlet-name>TossCoinServlet</servlet-name>
        <servlet-class>za.ac.geeks.TossCoinServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>GuessServlet</servlet-name>
        <servlet-class>za.ac.geeks.GuessServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>TossCoinServlet</servlet-name>
        <url-pattern>/TossCoinServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>GuessServlet</servlet-name>
        <url-pattern>/GuessServlet</url-pattern>
    </servlet-mapping>
      <context-param>
        <param-name>computerName</param-name>
        <param-value>Siri</param-value>
    </context-param>
</web-app>
